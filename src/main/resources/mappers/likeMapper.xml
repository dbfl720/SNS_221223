<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 
 <mapper namespace="com.sns.like.dao.LikeMapper">
 	<insert id="insertLike" parameterType="map">
 		INSERT INTO `like`
 		(
 			`postId`
 			,`userId`
 			,`createdAt`
 		)
 		VALUES
 		(
 			#{postId}
 			,#{userId}
 			,NOW()
 		)
 	
 	</insert>
 	
 	
 	<select id="selectLikeCountByUserIdPostId" parameterType="int" resultType="int">
 		SELECT
 			COUNT(1)
 		FROM
 			`like`
		WHERE
			`userId` = #{userId}
			AND `postId` = #{postId}
 	</select>
 	
 	
 	
 	<delete id="deleteLikeByUserIdPostId" parameterType="int">
 		DELETE
 		FROM
 			`like`
		WHERE
			`userId` = #{userId}
			AND `postId` = #{postId}
 	</delete>
 	
 	
 	<select id="checkLike" parameterType="Integer" resultType="boolean">
 		SELECT EXISTS(               <!-- null -> false 바꾸는 것.  -->
 		
 		SELECT 1 
 		FROM `like`
 		WHERE
			`userId` = #{userId}
			AND `postId` = #{postId})
 		
 	</select>
 	
 	
 	
 	<select id="likeCount" parameterType="Integer" resultType="int">
 		SELECT
 			COUNT(*)
 		FROM
 			`like`
		WHERE
			`postId` = #{postId}
 		
 	
 	</select>
 	
 	

 </mapper>